<div class="box box-primary">
  <div class="box-header with-border">
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <%= link_to 'Novo', new_condominio_path, class: 'btn btn-primary pull-right' %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <table class="table table-hover">
          <thead>
            <tr>
              <th><%= t('.attributes.nome')%></th>
              <th><%= t('.attributes.cnpj')%></th>
              <th><%= t('.attributes.endereco')%></th>
              <th colspan="3" style="text-align: center;"><%= t('.attributes.actions')%></th>
            </tr>
          </thead>

          <tbody>
            <% @condominios.each do |condominio| %>
              <tr>
                <td><%= condominio.nome %></td>
                <td><%= condominio.cnpj %></td>
                <td><%= condominio.endereco %></td>

                <td style="text-align: center;"><%= link_to '', condominio, :class => 'glyphicon glyphicon-search', :title => 'View' %></td>
                <td style="text-align: center;"><%= link_to '', edit_condominio_path(condominio), :class => 'glyphicon glyphicon-pencil', :title => 'Edit'  %></td>
                <td style="text-align: center;">
                    <%= link_to '', condominio, :class => 'glyphicon glyphicon-trash', :method => :delete, :data => { :confirm => 'Are you sure?' }, :title => 'Apagar' %>
                </td>

              </tr>
            <% end %>
          </tbody>
        </table>

      </div>
    </div>
  </div>
</div>
