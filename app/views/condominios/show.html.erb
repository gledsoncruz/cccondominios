
<%- model_class = Bloco -%>

<div class="modal fade" id="blocoModal" tabindex="-1" role="dialog" aria-labelledby="blocoLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="blocoLabel">Bloco</h4>
      </div>
      <%= bootstrap_form_for(@bloco, remote: true, html: {'data-model' => model_class.model_name.human.downcase}) do |f| %>
      <div class="modal-body">
          <%= f.text_field :descricao %>
          <%= f.text_field :sigla %>
          <%= f.text_field :obs %>
          <%= f.hidden_field :condominio_id, :value => @condominio.id%>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= f.submit "Salvar", class: 'btn btn-primary' %>
      </div>
      <% end %>
    </div>
  </div>
</div>








<div class="row">
  <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
    <h2><%= @condominio.nome %></h2>
  </div>
  <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
    <div class=" pull-right">
      <%= link_to 'Excluir', @condominio, class: 'btn btn-danger' %>
      <%= link_to 'Alterar', edit_condominio_path(@condominio), class: 'btn btn-primary' %>
      <%= link_to 'Listagem de Condominios', condominios_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <table class="table table-bordered table-hover">

        <tr>
          <td style="width:10%"><strong>Nome:</strong></td>
          <td style="width:90%"><%= @condominio.nome %></td>
        </tr>
        <tr>
          <td><strong>CNPJ:</strong></td>
          <td><%= @condominio.cnpj %></td>
        </tr>
        <tr>
          <td><strong>Endereço:</strong></td>
          <td><%= @condominio.endereco %></td>
        </tr>
        <tr>
          <td><strong>Cidade:</strong></td>
          <td><%= @condominio.cidade %></td>
        </tr>
        <tr>
          <td><strong>UF:</strong></td>
          <td><%= @condominio.uf %></td>
        </tr>
        <tr>
          <td><strong>CEP:</strong></td>
          <td><%= @condominio.cep %></td>
        </tr>

    </table>
      <div class="box box-primary">
        <div class="box-header with-border">
          <div class="row">
            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
              <h2>Blocos</h2>
            </div>
            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
              <div class=" pull-right">
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#blocoModal">Novo Bloco</button>
                <!--%= link_to 'Novo', edit_condominio_path(@condominio), class: 'btn btn-primary' %-->
              </div>
            </div>
          </div>
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Descricao</th>
                  <th>Sigla</th>
                  <th>Observação</th>
                  <th colspan="3" style="text-align: center;">Ações</th>
                </tr>
              </thead>

              <tbody>
                <% @condominio.blocos.reverse_each do |bloco| %>
                  <tr>
                    <td><%= bloco.descricao %></td>
                    <td><%= bloco.sigla %></td>
                    <td><%= bloco.obs %></td>
                    <td style="text-align: center;"><%= link_to '', bloco, :class => 'glyphicon glyphicon-search', :title => 'View' %></td>
                    <td style="text-align: center;"><%= link_to '', edit_bloco_path(bloco), :class => 'glyphicon glyphicon-pencil', :title => 'Edit'  %></td>
                    <td style="text-align: center;"><%= link_to '', bloco, :class => 'glyphicon glyphicon-trash', :method => :delete, :data => { :confirm => 'Are you sure?' }, :title => 'Apagar' %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>

        </div>
      </div>
  </div>
</div>