<div class="box box-primary">
  <div class="box-header with-border">
    <h3><%= @condominio.nome %></h3>
    <%= bootstrap_form_for(@unidade) do |f| %>
      <%= f.label :bloco_id %>
      <%= f.collection_select :bloco_id, @condominio.blocos.reverse_each, :id, :descricao, skip_label: true  %>
      <%= f.text_field :numero %>
      <%= f.text_field :piso %>

      <%= f.submit 'Submit', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
